<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Damax\User\Application\Command\UserCommand">
        <property name="userId">
            <constraint name="NotBlank" />
        </property>
    </class>

    <class name="Damax\User\Application\Command\ChangePassword">
        <property name="newPassword">
            <constraint name="NotBlank" />
            <constraint name="Damax\User\Bridge\Symfony\Validator\Constraints\Password" />
        </property>
    </class>

    <class name="Damax\User\Application\Command\RequestPasswordReset">
        <property name="userId">
            <constraint name="NotBlank" />
            <constraint name="Email" />
            <constraint name="Damax\User\Bridge\Symfony\Validator\Constraints\ExistentEmail" />
        </property>
    </class>

    <class name="Damax\User\Application\Command\ResetPassword">
        <property name="token">
            <constraint name="NotBlank" />
        </property>
        <property name="newPassword">
            <constraint name="NotBlank" />
            <constraint name="Damax\User\Bridge\Symfony\Validator\Constraints\Password" />
        </property>
    </class>

    <class name="Damax\User\Application\Command\ConfirmEmail">
        <property name="token">
            <constraint name="NotBlank" />
        </property>
    </class>

    <class name="Damax\User\Application\Command\RegisterUser">
        <property name="email">
            <constraint name="NotBlank" />
            <constraint name="Email" />
            <constraint name="Damax\User\Bridge\Symfony\Validator\Constraints\UniqueEmail" />
        </property>
        <property name="mobilePhone">
            <constraint name="NotBlank" />
            <constraint name="Damax\User\Bridge\Symfony\Validator\Constraints\UniqueMobilePhone" />
        </property>
        <property name="password">
            <constraint name="NotBlank" />
            <constraint name="Damax\User\Bridge\Symfony\Validator\Constraints\Password" />
        </property>
        <property name="name">
            <constraint name="Valid" />
        </property>
    </class>

    <class name="Damax\User\Application\Command\CreateRole">
        <property name="role">
            <constraint name="NotBlank" />
            <constraint name="Valid" />
        </property>
    </class>

    <class name="Damax\User\Application\Command\UpdateRole">
        <property name="code">
            <constraint name="NotBlank" />
        </property>
        <property name="role">
            <constraint name="NotBlank" />
            <constraint name="Valid" />
        </property>
    </class>

    <class name="Damax\User\Application\Command\CreatePermission">
        <property name="permission">
            <constraint name="NotBlank" />
            <constraint name="Valid" />
        </property>
    </class>

    <class name="Damax\User\Application\Dto\RoleDto">
        <property name="code">
            <constraint name="NotBlank" />
            <constraint name="Length">
                <option name="max">32</option>
            </constraint>
        </property>
    </class>

    <class name="Damax\User\Application\Dto\RoleBodyDto">
        <property name="name">
            <constraint name="NotBlank" />
        </property>
    </class>

    <class name="Damax\User\Application\Dto\PermissionDto">
        <property name="code">
            <constraint name="NotBlank" />
            <constraint name="Length">
                <option name="max">64</option>
            </constraint>
        </property>
        <property name="category">
            <constraint name="NotBlank" />
        </property>
    </class>

</constraint-mapping>
